@page "/"
@using MudBlazor

<PageTitle>Home</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-6"><MudDatePicker @bind-Date="SelectedDate"></MudDatePicker></div>
        <div class="col-6"><MudTimePicker @bind-Time="SelectedTime"></MudTimePicker></div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="OnSave">Save</MudButton>
        </div>
    </div>
</div>

