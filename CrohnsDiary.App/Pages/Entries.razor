@page "/entries"
@using CrohnsDiary.App.Models
@using MudBlazor

<PageTitle>Entries</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-6"><MudDatePicker PickerVariant="PickerVariant.Static" Orientation="Orientation.Landscape" @bind-Date="SelectedDate" ></MudDatePicker></div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            @if (EntriesOnSelectedDate.Count > 0)
            {
                <MudDataGrid Items="@EntriesOnSelectedDate" Striped="true">
                    <Columns>
                        <PropertyColumn Property="e => e.Timestamp" Title="Time" Format="t"></PropertyColumn>
                        <PropertyColumn Property="e => e.Consistency"></PropertyColumn>
                    </Columns>
                </MudDataGrid>
            }
            else
            {
                <div>No entries for that date</div>
            }
        </div>
    </div>
</div>